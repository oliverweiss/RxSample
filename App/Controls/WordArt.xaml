<UserControl
    x:Class="App.Controls.WordArt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media3D="using:Windows.UI.Xaml.Media.Media3D"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Grid.Transform3D>
			<media3D:PerspectiveTransform3D />
		</Grid.Transform3D>
		<local:CompositionShadow BlurRadius="4" Color="Green" OffsetX="4" OffsetY="4" OffsetZ="10" ShadowOpacity="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<local:CompositionShadow.Transform3D>
				<media3D:CompositeTransform3D TranslateX="40"  TranslateY="15" RotationY="60" TranslateZ="500" RotationZ="15" />
			</local:CompositionShadow.Transform3D>
			<local:CompositionShadow.CastingElement>
				<TextBlock Text="WordArt!" FontFamily="Comic Sans MS" FontSize="48" FontWeight="Bold"/>
			</local:CompositionShadow.CastingElement>
		</local:CompositionShadow>
	</Grid>

</UserControl>



